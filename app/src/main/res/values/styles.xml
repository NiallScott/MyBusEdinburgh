<resources>

    <style name="Widget.MyBus.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="AppActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="Widget.MyBusEdinburgh.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Widget.MyBus.ExpandCollapseIndicator" parent="@android:style/Widget">
        <item name="android:contentDescription">@null</item>
        <item name="expandedState">collapsed</item>
        <item name="collapsedContentDescription">@string/expandcollapseindicator_contentdescription_collapsed</item>
        <item name="expandedContentDescription">@string/expandcollapseindicator_contentdescription_expanded</item>
    </style>

    <style name="TextAppearance.AppCompat.ListItem1" >
        <item name="android:textSize">@dimen/list_item_1_text_size</item>
    </style>

    <style name="TextAppearance.AppCompat.ListItem2" >
        <item name="android:textSize">@dimen/list_item_2_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.AppCompat.ListItem2.Secondary" >
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.AppCompat.Subheader">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">@string/fontFamilyMedium</item>
    </style>

    <style name="TextAppearance.MyBus.DisplayStopData.Subheading"
           parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.MyBus.DisplayStopData.ServiceName" parent="">
        <item name="android:textSize">@dimen/display_stop_data_service_name_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.MyBus.MapTypeChooser.ItemText"
           parent="TextAppearance.AppCompat.ListItem1">
        <item name="android:textColor">@color/maptype_bottomsheet_item_text</item>
    </style>

    <style name="Card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_double</item>
        <item name="android:layout_marginRight">@dimen/padding_double</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="Card.Default">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ServiceName">
        <item name="android:minWidth">@dimen/display_stop_data_service_name_min_width</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MyBus.DisplayStopData.ServiceName</item>
        <item name="android:background">@drawable/bus_service_rounded_background</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MapTypeBottomSheetRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="MapTypeBottomSheetTickIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_double</item>
        <item name="android:layout_marginStart">@dimen/padding_double</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:src">@drawable/maptype_bottomsheet_tick_icon</item>
        <item name="android:tint">?colorAccent</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="MapTypeBottomSheetTextItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginRight">@dimen/padding_double</item>
        <item name="android:layout_marginEnd">@dimen/padding_double</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MyBus.MapTypeChooser.ItemText</item>
    </style>
</resources>