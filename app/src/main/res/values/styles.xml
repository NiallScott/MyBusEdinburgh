<resources>

    <!--
    *****************
    * Widget styles *
    *****************
    -->
    <style name="Widget.MyBus.ExpandCollapseIndicator" parent="@android:style/Widget">
        <item name="android:contentDescription">@null</item>
        <item name="expandedState">collapsed</item>
        <item name="collapsedContentDescription">@string/expandcollapseindicator_contentdescription_collapsed</item>
        <item name="expandedContentDescription">@string/expandcollapseindicator_contentdescription_expanded</item>
    </style>

    <style name="Widget.MyBus.TextView.Error" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:drawablePadding">@dimen/padding_double</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.MyBus.TextView.ServiceName" parent="Widget.AppCompat.TextView">
        <item name="android:minWidth">@dimen/display_stop_data_service_name_min_width</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bus_service_rounded_background</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.MyBus.TextView.DisplayStopData.Item" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.MyBus.TextView.Map.MapType" parent="Widget.Material3.CheckedTextView">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?textAppearanceBodyMedium</item>
        <item name="android:textColor">@color/maptype_item</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
        <item name="android:drawableTint">@color/maptype_item</item>
    </style>

    <style
        name="Preference.SwitchPreferenceCompat.MyBus"
        parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:widgetLayout">@layout/preference_widget_material_switch</item>
    </style>
</resources>