<resources>

    <!--
    *****************
    * Widget styles *
    *****************
    -->
    <style name="Widget.MyBus.ExpandCollapseIndicator" parent="@android:style/Widget">
        <item name="android:contentDescription">@null</item>
        <item name="expandedState">collapsed</item>
        <item name="collapsedContentDescription">@string/expandcollapseindicator_contentdescription_collapsed</item>
        <item name="expandedContentDescription">@string/expandcollapseindicator_contentdescription_expanded</item>
    </style>

    <style name="Widget.MyBus.TextView.ServiceName" parent="Widget.AppCompat.TextView">
        <item name="android:minWidth">@dimen/display_stop_data_service_name_min_width</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bus_service_rounded_background</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.MyBus.TextView.DisplayStopData.Item" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.AppCompat.ListItem1" >
        <item name="android:textSize">@dimen/list_item_1_text_size</item>
    </style>

    <style name="TextAppearance.MyBus.MapTypeChooser.ItemText"
           parent="TextAppearance.AppCompat.ListItem1">
        <item name="android:textColor">@color/maptype_bottomsheet_item_text</item>
    </style>

    <style name="MapTypeBottomSheetRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="MapTypeBottomSheetTickIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_double</item>
        <item name="android:layout_marginStart">@dimen/padding_double</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:src">@drawable/maptype_bottomsheet_tick_icon</item>
        <item name="android:tint">?colorAccent</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="MapTypeBottomSheetTextItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginRight">@dimen/padding_double</item>
        <item name="android:layout_marginEnd">@dimen/padding_double</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MyBus.MapTypeChooser.ItemText</item>
    </style>
</resources>