<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_width="128dp"
    tools:padding="@dimen/padding_double">

    <CheckedTextView
        android:id="@+id/txtServiceName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/padding_half"
        android:gravity="center"
        android:background="@drawable/services_chooser_service_background"
        android:textAppearance="?textAppearanceTitleMedium"
        android:lines="1"
        android:ellipsize="end"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_min="?minTouchTargetSize"
        app:layout_constraintHeight_min="?minTouchTargetSize"
        tools:text="TRAM"
        tools:backgroundTint="?colorTertiary"
        tools:checked="false" />
</androidx.constraintlayout.widget.ConstraintLayout>