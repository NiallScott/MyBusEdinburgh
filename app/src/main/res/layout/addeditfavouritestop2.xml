<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <ScrollView
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_margin_start_end"
            android:layout_marginRight="@dimen/dialog_margin_start_end"
            android:layout_marginStart="@dimen/dialog_margin_start_end"
            android:layout_marginEnd="@dimen/dialog_margin_start_end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBlurb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                tools:text="@string/addeditfavouritestopdialog_blurb_add" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_default"
                android:hint="@string/addeditfavouritestopdialog_edit_name_hint">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/indeterminate_progress" />
</FrameLayout>