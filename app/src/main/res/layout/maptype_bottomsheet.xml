<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="?dialogPreferredPadding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maptypebottomsheetdialog_title"
        android:textAppearance="?textAppearanceHeadlineSmall"
        android:textColor="?colorOnSurface" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_double"
        android:orientation="horizontal">

        <CheckedTextView
            style="@style/Widget.MyBus.TextView.Map.MapType"
            android:id="@+id/txtMapTypeNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/maptypebottomsheetdialog_type_normal"
            android:drawableTop="@drawable/ic_maptype_map"
            tools:checked="true" />

        <CheckedTextView
            style="@style/Widget.MyBus.TextView.Map.MapType"
            android:id="@+id/txtMapTypeSatellite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/maptypebottomsheetdialog_type_satellite"
            android:drawableTop="@drawable/ic_maptype_satellite" />

        <CheckedTextView
            style="@style/Widget.MyBus.TextView.Map.MapType"
            android:id="@+id/txtMapTypeHybrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/maptypebottomsheetdialog_type_hybrid"
            android:drawableTop="@drawable/ic_maptype_hybrid" />
    </LinearLayout>
</LinearLayout>