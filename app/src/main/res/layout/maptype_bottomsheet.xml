<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_double"
        android:text="@string/maptypebottomsheetdialog_title"
        android:textAppearance="?textAppearanceTitleSmall" />

    <uk.org.rivernile.android.bustracker.ui.widgets.CheckableLinearLayout
        style="@style/MapTypeBottomSheetRow"
        android:id="@+id/layoutNormal">

        <uk.org.rivernile.android.bustracker.ui.widgets.CheckableImageView
            style="@style/MapTypeBottomSheetTickIcon" />

        <CheckedTextView
            style="@style/MapTypeBottomSheetTextItem"
            android:text="@string/maptypebottomsheetdialog_type_normal"/>
    </uk.org.rivernile.android.bustracker.ui.widgets.CheckableLinearLayout>

    <uk.org.rivernile.android.bustracker.ui.widgets.CheckableLinearLayout
        style="@style/MapTypeBottomSheetRow"
        android:id="@+id/layoutSatellite">

        <uk.org.rivernile.android.bustracker.ui.widgets.CheckableImageView
            style="@style/MapTypeBottomSheetTickIcon" />

        <CheckedTextView
            style="@style/MapTypeBottomSheetTextItem"
            android:text="@string/maptypebottomsheetdialog_type_satellite"
            android:textAppearance="@style/TextAppearance.AppCompat.ListItem1" />
    </uk.org.rivernile.android.bustracker.ui.widgets.CheckableLinearLayout>

    <uk.org.rivernile.android.bustracker.ui.widgets.CheckableLinearLayout
        style="@style/MapTypeBottomSheetRow"
        android:id="@+id/layoutHybrid"
        android:layout_marginBottom="@dimen/padding_default">

        <uk.org.rivernile.android.bustracker.ui.widgets.CheckableImageView
            style="@style/MapTypeBottomSheetTickIcon" />

        <CheckedTextView
            style="@style/MapTypeBottomSheetTextItem"
            android:text="@string/maptypebottomsheetdialog_type_hybrid" />
    </uk.org.rivernile.android.bustracker.ui.widgets.CheckableLinearLayout>
</LinearLayout>