<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:locale="en">

    <!--
    *******************
    * Generic strings *
    *******************
    -->
    <string name="remove_all">Remove all</string>

    <!--
    *******************
    *******************
    ** Notifications **
    *******************
    *******************
    -->

    <!--
    *********************************
    * Notification channels strings *
    *********************************
    -->
    <string name="notification_channel_foreground_name">Foreground tasks</string>
    <string name="notification_channel_foreground_description">A notification may appear when the app is performing some tasks, such as checking arrival times and your proximity to a stop</string>
    <string name="notification_channel_arrival_alert_name">Arrival alerts</string>
    <string name="notification_channel_arrival_alert_description">These notifications appear when your set arrival alerts are triggered</string>
    <string name="notification_channel_proximity_alert_name">Proximity alerts</string>
    <string name="notification_channel_proximity_alert_description">These notifications appear when your set proximity alerts are triggered</string>

    <!--
    *******************************************
    * Arrival foreground Service notification *
    *******************************************
    -->
    <string name="arrival_foreground_service_notification_title">Checking arrival times…</string>

    <!--
    ******************************
    * Arrival alert notification *
    ******************************
    -->
    <string name="arrival_alert_notification_title">Bus arrival alert</string>
    <plurals name="arrival_alert_notification_services">
        <item quantity="one">Service %1$s is due %2$s at stop %3$s</item> <!-- %1$s = service name, %2$s = time qualifier, %3$s = stop name -->
        <item quantity="other">Services %1$s are due %2$s at stop %3$s</item> <!-- %1$s = service names, %2$s = time qualifier, %3$s = stop name -->
    </plurals>
    <string name="arrival_alert_notification_time_now">now</string>
    <plurals name="arrival_alert_notifications_time_plural">
        <item quantity="one">in %d minute</item> <!-- %d = number of minutes -->
        <item quantity="other">in %d minutes or less</item> <!-- %d = number of minutes -->
    </plurals>

    <!--
    *********************************************
    * Proximity foreground Service notification *
    *********************************************
    -->
    <string name="proximity_foreground_service_notification_title">Checking proximity…</string>

    <!--
    ********************************
    * Proximity alert notification *
    ********************************
    -->
    <string name="proximity_alert_notification_title">Approaching %s</string> <!-- %s = bus stop name and code. -->
    <string name="proximity_alert_notification_summary">You have entered within a %1$dm radius of %2$s</string> <!-- %1$d = number of meters. %2$s = bus stop name and code. -->
    <string name="proximity_alert_notification_ticker">You are approaching %s</string> <!-- %s = bus stop name and code. -->
</resources>