<resources>

    <declare-styleable name="ThemeAttributes">
        <attr name="contentViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="ContentView">
        <attr name="contentLayout" />
        <attr name="progressView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="errorView" format="reference" />
    </declare-styleable>

    <!-- This exposes the enumeration of states for ContentView to XML. -->
    <attr name="contentLayout">
        <!-- Show the progress layout. -->
        <enum name="progress" value="0" />
        <!-- Show the content layout. -->
        <enum name="content" value="1" />
        <!-- Show the error layout. -->
        <enum name="error" value="2" />
    </attr>
</resources>